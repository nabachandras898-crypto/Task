import java.util.Random;
import java.util.Scanner;

public class GuessTheNumber {

    // Constants for the game
    private static final int MIN_RANGE = 1;
    private static final int MAX_RANGE = 100;
    private static final int MAX_ATTEMPTS = 7; // Limiting attempts to 7

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        int totalScore = 0; // Tracks the number of rounds won
        boolean playAgain = true;
        int roundCount = 0;

        System.out.println("Welcome to the **Guess the Number** Game!");
        System.out.println("You have " + MAX_ATTEMPTS + " attempts per round to guess a number between " 
                           + MIN_RANGE + " and " + MAX_RANGE + ".");

        while (playAgain) {
            roundCount++;
            System.out.println("\n--- Starting Round " + roundCount + " ---");
            
            // 1. Generate a random number within the specified range
            int targetNumber = random.nextInt(MAX_RANGE - MIN_RANGE + 1) + MIN_RANGE;
            int attempts = 0;
            boolean guessedCorrectly = false;

            while (attempts < MAX_ATTEMPTS && !guessedCorrectly) {
                attempts++;
                System.out.print("Attempt " + attempts + "/" + MAX_ATTEMPTS + ". Enter your guess: ");
                
                // Input validation
                if (!scanner.hasNextInt()) {
                    System.out.println("Invalid input. Please enter a whole number.");
                    scanner.next(); // Clear the invalid input
                    attempts--; // Don't count invalid input as an attempt
                    continue;
                }
                
                int userGuess = scanner.nextInt();
                
                // 3. Compare the user's guess and provide feedback
                if (userGuess == targetNumber) {
                    guessedCorrectly = true;
                    System.out.println("ðŸŽ‰ **Congratulations!** You've guessed the number **" + targetNumber + "** correctly!");
                    System.out.println("You took " + attempts + " attempts.");
                    totalScore++; // 7. Increment score for a round win
                } else if (userGuess < targetNumber) {
                    System.out.println("Too **low**. Try again.");
                } else { // userGuess > targetNumber
                    System.out.println("Too **high**. Try again.");
                }
            }
            
            // Handle running out of attempts
            if (!guessedCorrectly) {
                System.out.println("\nðŸ’” You ran out of attempts! The correct number was **" + targetNumber + "**.");
            }
            
            // 6. Option for multiple rounds
            System.out.print("\nDo you want to play another round? (yes/no): ");
            String playAgainInput = scanner.next().toLowerCase();
            playAgain = playAgainInput.startsWith("y");
        }

        // 7. Display the final score
        System.out.println("\n--- Game Over! ---");
        System.out.println("You played **" + roundCount + "** rounds.");
        System.out.println("Your final score (Rounds Won): **" + totalScore + "**");
        System.out.println("Thanks for playing!");
        
        scanner.close();
    }
}
